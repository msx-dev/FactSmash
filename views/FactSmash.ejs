<%- include('partials/header') %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/FactSmash"><i class="fas fa-book fa-1x"></i> FactSmash</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <div class="fixed-btn">
        <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit</a>
      </div>
      <li class="nav-item">
        <a class="nav-link" href="/submit">Submit a Fact</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/about">About</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/register">Register</a>
      </li>
    </ul>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/logout">Leave/Logout</a>
      </li>
    </ul>
  </div>
</nav>

<div class="jumbotron text-center">
  <div class="container">
    <h1 class="display-4">Smashed Facts</h1>
    <hr>
    
    <% factsicles.reverse().forEach(function(fact){ %>
      
      <div class="card bg-light" style="width: 30rem;">
        <div class="card-body">
          <h5 class="card-title"><%=fact.facttitle%></h5>
          <p class="card-text"><%=fact.fact%></p>
          <a href=<%=fact.proof%> target="_blank" rel="noopener noreferrer" class="btn btn-dark">Want proof?</a>
        </div>
      </div>
    <% }) %>
    

    <hr>

    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Fact</a>
  </div>
</div>

<%- include('partials/footer') %>
